#!/bin/sh

FAILS=0
FIRSTFAIL=0

while :; do
	echo -n "Starting $@ at " >> /var/log/verwarmd/wrapper.log
	date +%s >> /var/log/verwarmd/wrapper.log
	"$@" 2>&1 >> /var/log/verwarmd/wrapper.log
	NOW=`date +%s`
	cat /var/log/verwarmd/wrapper.log | sendmail root
	if [ "$(($NOW-3600))" -gt "$FIRSTFAIL" ]; then
		FAILS=0
	fi
	if [ "$FAILS" = "0" ]; then
		FIRSTFAIL=$NOW
	fi
	if [ "$FAILS" -ge 3 ]; then
		echo "REBOOTING " | sendmail root
		sudo reboot
	fi
	FAILS=$(($FAILS+1))
	gpio mode 0 out
	gpio mode 2 out
	gpio write 0 1
	sleep 0.5
	gpio write 0 1
	if [ "$FAILS" -gt "1" ]; then
		sleep 10
	fi
done
